<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/backSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:src="@drawable/ic_vector"
        android:tint="@color/green"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_46sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:src="@drawable/ic_groudsp_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_35sdp"
        android:text="Sign Up"
        android:fontFamily="@font/spartan"
        android:textColor="@color/green"
        android:textSize="41sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="0dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardBackgroundColor="@color/lightGreen"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/cardView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/SignUpName"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/curved_button"
                        android:hint="Type your name here"
                        android:textSize="8sp"
                        android:paddingLeft="@dimen/_20sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:background="@color/lightGreen"
                        android:text="  Name  "
                        android:textColor="@color/darkGreen"
                        android:textFontWeight="1000"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/SignUpName"
                        app:layout_constraintStart_toStartOf="@+id/SignUpName"
                        app:layout_constraintTop_toTopOf="@+id/SignUpName" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/SignUpEmail"
                        android:layout_width="0dp"
                        android:textSize="8sp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/curved_button"
                        android:hint="Type your email here"
                        android:paddingLeft="@dimen/_20sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <!--TODO: Make a otp screen fasht-->
                    <TextView
                        android:id="@+id/textView21432"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:background="@color/lightGreen"
                        android:text="  E-mail  "
                        android:textColor="@color/darkGreen"
                        android:textFontWeight="1000"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/SignUpEmail"
                        app:layout_constraintStart_toStartOf="@+id/SignUpEmail"
                        app:layout_constraintTop_toTopOf="@+id/SignUpEmail" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/SignUpMobileNumber"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:textSize="8sp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/curved_button"
                        android:hint="Type your mobile number here"
                        android:paddingLeft="@dimen/_20sdp"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView2142"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:background="@color/lightGreen"
                        android:text="  Mobile Number  "
                        android:textColor="@color/darkGreen"
                        android:textFontWeight="1000"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/SignUpMobileNumber"
                        app:layout_constraintStart_toStartOf="@+id/SignUpMobileNumber"
                        app:layout_constraintTop_toTopOf="@+id/SignUpMobileNumber" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/LogInPasswordContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="0dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:hintEnabled="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:passwordToggleTint="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/SignUpPassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/curved_button"
                            android:hint="Type your password here"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/_20sdp"
                            android:textColor="@color/darkGreen"
                            android:textSize="8sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:background="@color/lightGreen"
                        android:text="  Password  "
                        android:textColor="@color/darkGreen"
                        android:textFontWeight="1000"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/LogInPasswordContainer"
                        app:layout_constraintStart_toStartOf="@+id/LogInPasswordContainer"
                        app:layout_constraintTop_toTopOf="@+id/LogInPasswordContainer" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_29sdp"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_35sdp"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/signUpSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/curved_button"
                    android:backgroundTint="@color/green"
                    android:text="Sign up"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textFontWeight="1001"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>